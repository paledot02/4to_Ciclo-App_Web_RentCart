                @Html.DropDownListFor(model => model.ide_dis, (SelectList)ViewBag.distrito, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ide_dis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modificar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
